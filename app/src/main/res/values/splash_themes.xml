<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Splash Screen Theme. -->
    <style name="Theme.SplashTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@android:color/holo_orange_dark</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.MaterialComponents.DayNight.DarkActionBar</item>

        <!-- Status bar and Nav bar configs -->
        <item name="android:statusBarColor" >@android:color/holo_orange_dark</item>
        <item name="android:navigationBarColor">@android:color/holo_orange_dark</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>